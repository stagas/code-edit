{
  "name": "code-edit",
  "author": "stagas",
  "short": "stagas/code-edit",
  "description": "lightweight code editor custom element with syntax highlighting",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://git@github.com:stagas/code-edit.git"
  },
  "keywords": [
    "code",
    "editor",
    "html",
    "syntax-highlight",
    "web-component",
    "custom-element"
  ],
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && echo done.",
    "docs": "documentation readme src --resolve=node --pe ts --re ts --re d.ts --github --section=API --markdown-toc-max-depth=3 --config=documentation.yml",
    "docs:site": "npm run docs -- --readme-file site/pages/index.md",
    "test": "echo ok",
    "test:web": "web-test-runner",
    "cov": "jest --coverage",
    "playground": "vite --force --cors --clearScreen=false --open /playground/",
    "lint": "eslint src && prettier --check src",
    "build:watch": "npm run build:cjs:watch & npm run build:esm:watch",
    "docs:watch": "onchange -i src --await-write-finish 400 -- npm run docs",
    "test:watch": "jest --watchAll",
    "cov:watch": "jest --coverage --watchAll",
    "bench:watch": "fpick benchmark --repeat -- onchange -i src 'benchmark/**/*.{js,jsx,ts,tsx}' --await-write-finish 400 --kill -- node -r esbuild-register",
    "example:watch": "fpick example --repeat -- onchange -i src example --await-write-finish 400 --kill -- node -r esbuild-register",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:cjs:watch": "tsc -p tsconfig.cjs.json --watch",
    "build:esm": "tsc -p tsconfig.esm.json && echo '{\"type\":\"module\"}' >dist/esm/package.json",
    "build:esm:watch": "tsc -p tsconfig.esm.json --watch",
    "build:min": "esbuild src/index.ts --bundle --format=esm | terser --compress --module --mangle -o code-edit.min.js",
    "lint:fix": "eslint --fix src && prettier --write src",
    "clean": "rimraf dist",
    "prepack": "npm run build",
    "prepack:dry": "npm pack --dry-run",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@stagas/documentation-fork": "^13.2.5",
    "@stagas/sucrase-jest-plugin": "^2.2.0-fork",
    "@swc-node/jest": "^1.4.3",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@web/dev-server-esbuild": "^0.2.16",
    "@web/test-runner": "^0.13.23",
    "esbuild": "^0.14.8",
    "esbuild-register": "^3.2.1",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-react": "^7.28.0",
    "fpick": "^1.1.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-browser-globals": "^25.1.0-beta",
    "onchange": "^7.1.0",
    "plenty-themes": "^1.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "scoped-registries": "^0.2.0",
    "terser": "^5.10.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "vite": "^2.7.6"
  },
  "dependencies": {
    "code-syntax": "^1.0.0",
    "debounce-micro": "^1.0.0",
    "super-impose": "^1.0.0",
    "textarea-code": "^1.0.1"
  }
}
